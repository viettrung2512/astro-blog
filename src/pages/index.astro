---
import MainLayout from "../layouts/MainLayout.astro";
import SearchForm from "../components/SearchForm.astro";
import Blogs from "../components/Blog/Blogs.jsx";
import TopAuthors from "../components/TopAuthor/TopAuthors.jsx";
---

<MainLayout>
  <div class="grid grid-cols-1 gap-5 lg:grid-cols-2">
    <div>
      <h1 class="text-5xl font-bold mt-4 mb-8 leading-tight xl:text-6xl">
        Articles, Stories & Tutorials for Tech People
      </h1>
      <SearchForm />
    </div>
  </div>

  <div class="mt-10">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Top Authors</h2>
    <TopAuthors client:only="react" />
  </div>

  <div class="mt-10">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Latest Articles</h2>
    <Blogs client:only="react" />
  </div>
</MainLayout>
