---
import MainLayout from "../layouts/MainLayout.astro";
import Blogs from "../components/Blog/Blogs.jsx";
import TopAuthors from "../components/TopAuthor/TopAuthors.jsx";
import TopBlog from "../components/PopularBlog/TopBlog.jsx";
import TopLikedArticle from "../components/PopularBlog/TopLikedArticle.jsx";
---

<MainLayout>  
  
  <!-- Hero Section vá»›i gradient background -->
  <section class="relative overflow-hidden bg-gradient-to-br from-slate-50 via-white to-blue-50 py-16 lg:py-24">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-600/5 to-purple-600/5"></div>
    
    <div class="relative grid grid-cols-1 gap-12 lg:grid-cols-2 items-center">
      <!-- Left Column - Hero Content -->
      <div class="space-y-8">
        <!-- Trending Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-sm font-medium">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
          Trending Now
        </div>

        <!-- Main Heading -->
        <div class="space-y-6">
          <h1 class="text-4xl lg:text-6xl font-bold leading-tight">
            <span class="bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent">
              Discover Amazing
            </span>
            <span class="block text-blue-600 mt-2">Tech Stories</span>
          </h1>
          
          <p class="text-xl text-gray-600 leading-relaxed max-w-lg">
            Dive into articles, tutorials, and insights from the world's best tech minds. 
            Stay ahead with cutting-edge content.
          </p>
        </div>

        <!-- Quick Stats -->
        <div class="flex gap-8 pt-6">
          <div class="text-center">
            <div class="text-3xl font-bold text-gray-900">1.2K+</div>
            <div class="text-sm text-gray-600 mt-1">Articles</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-gray-900">500+</div>
            <div class="text-sm text-gray-600 mt-1">Authors</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-gray-900">50K+</div>
            <div class="text-sm text-gray-600 mt-1">Readers</div>
          </div>
        </div>
      </div>

      <!-- Right Column - Featured Article -->
      <div class="relative">
        <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-2xl overflow-hidden border-0">
          <div class="relative">
            <div class="absolute top-4 left-4 z-10">
              <span class="bg-white/20 text-white px-3 py-1 rounded-full text-sm font-medium border border-white/30">
                Featured
              </span>
            </div>
            <TopLikedArticle client:only="react" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Popular Blog Section -->
  <section class="py-20 bg-transparent">
    <div class="space-y-8">
      <!-- Section Header -->
      <div class="flex items-center justify-between">
        <div class="space-y-2">
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900">
            Popular This Week
          </h2>
          <p class="text-gray-600 text-lg">Most read articles by our community</p>
        </div>
        
        <button onclick="window.location.href='/popularblog'" class="hidden sm:flex items-center gap-2 px-6 py-3 border border-gray-200 rounded-xl hover:bg-gray-50 transition-colors font-medium">
          View All
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
      </div>

      <!-- Popular Blogs Grid -->
      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-blue-50/50 to-transparent rounded-3xl"></div>
        <div class="relative p-8 rounded-3xl">
          <TopBlog client:only="react" />
        </div>
      </div>
    </div>
  </section>

  <!-- Top Authors Section -->
  <section class="py-20 bg-gradient-to-br from-gray-50 to-blue-50/30">
    <div class="space-y-12">
      <!-- Section Header -->
      <div class="text-center space-y-4">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900">
          Meet Our Top Authors
        </h2>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          Discover the brilliant minds behind our most engaging content
        </p>
      </div>

      <!-- Authors Grid with enhanced styling -->
      <div class="relative">
        <div class="relative p-8 lg:p-12">
          <TopAuthors client:only="react" />
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Articles Section -->
  <section class=" py-20 bg-transparent">
    <div class="space-y-8">
      <!-- Section Header -->
      <div class="flex items-center justify-between">
        <div class="space-y-2">
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900">
            Latest Articles
          </h2>
          <p class="text-gray-600 text-lg">Fresh content from our community</p>
        </div>
        
        <button onclick="window.location.href='/articles'" class="hidden sm:flex items-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition-colors font-medium shadow-lg">
          View All Articles
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
      </div>

      <!-- Articles List with modern styling -->
      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-b from-blue-50/30 to-transparent rounded-3xl"></div>
        <div class="relative rounded-3xl">
          <Blogs client:only="react" />
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section (Bonus) -->
  <section class="py-20 bg-gradient-to-r from-blue-600 to-purple-600 rounded-xl">
    <div class="text-center space-y-8 b">
      <div class="space-y-4">
        <h2 class="text-3xl lg:text-4xl font-bold text-white">
          Stay Updated
        </h2>
        <p class="text-blue-100 text-lg max-w-2xl mx-auto">
          Get the latest articles and tutorials delivered straight to your inbox
        </p>
      </div>
      
      <div class="max-w-md mx-auto">
        <div class="flex gap-3">
          <input 
            type="email" 
            placeholder="Enter your email" 
            class="flex-1 px-4 py-3 rounded-xl border-0 focus:ring-2 focus:ring-white/50 outline-none"
          />
          <button class="px-6 py-3 bg-white text-blue-600 rounded-xl font-medium hover:bg-gray-50 transition-colors">
            Subscribe
          </button>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Custom animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  section {
    animation: fadeInUp 0.6s ease-out;
  }

  /* Hover effects for interactive elements */
  button:hover {
    transform: translateY(-1px);
  }

  /* Custom gradient text */
  .gradient-text {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Glass morphism effect */
  .glass {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
</style>
